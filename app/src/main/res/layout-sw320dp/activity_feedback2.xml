    tools:context=".ThirdScreen"
    android:background="@drawable/bg1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="135dp"
            android:layout_marginTop="0dp"
            android:layout_height="128dp"
            app:srcCompat="@drawable/logobordered" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clock"/>
            <TextView
                android:id="@+id/date_value2"
                android:paddingLeft="4sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Friday, 17/2/19, 10:35 PM"
                android:textColor="#943938"/>
        </LinearLayout>


        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Your feedback matters"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal" />


        <EditText
            android:id="@+id/customer_info"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:hint="Please enter your feedback here"
            android:paddingLeft="20dp"
            android:maxLength="1000"
            android:gravity="start"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/rectangle_388"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat"
            />

        <Button
            android:id="@+id/btnss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Submit your feedback"
            android:textColor="#FFFF"
            android:textSize="15dp"
            android:textAllCaps="false"
            android:background="@drawable/rectangle_389"
            android:layout_gravity="center_horizontal"/>

