    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdScreen"
    android:background="@drawable/bg1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="305dp"
            android:layout_height="305dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/logobordered" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/clock"/>
            <TextView
                android:id="@+id/date_value2"
                android:paddingLeft="4sp"
                android:layout_width="wrap_content"
                android:textSize="30dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Friday, 17/2/19, 10:35 PM"
                android:textColor="#943938"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your feedback matters"
            android:layout_marginTop="20dp"
            android:layout_gravity="start"
            android:layout_marginLeft="170dp"
            android:textStyle="bold"
            android:textSize="25dp"
            />


        <EditText
            android:id="@+id/customer_info"
            android:layout_width="450dp"
            android:layout_height="270dp"
            android:hint="Please enter your feedback here"
            android:paddingLeft="20dp"
            android:maxLength="300"
            android:gravity="start"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_388"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat"
            />

        <Button
            android:id="@+id/btnss"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:text="Submit your feedback"
            android:textColor="#FFFF"
            android:textSize="25dp"
            android:textAllCaps="false"
            android:background="@drawable/rectangle_389"
            android:layout_gravity="center_horizontal"/>


