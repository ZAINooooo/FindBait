<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdScreen"
    android:background="@drawable/bg1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">


        <!--<TextView-->
            <!--android:id="@+id/logout"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="logout"-->
            <!--android:textStyle="bold"-->
            <!--android:textSize="30dp"-->
            <!--android:textColor="#000000"-->
            <!--android:gravity="right"-->
            <!--android:layout_marginRight="30dp"-->
            <!--/>-->


        <ImageView
            android:id="@+id/logout"
            android:layout_width="55dp"
            android:layout_height="68dp"
            android:layout_marginLeft="310dp"
            app:srcCompat="@mipmap/logouts" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="275dp"
            android:layout_marginTop="20dp"
            android:layout_height="255dp"
            app:srcCompat="@drawable/logobordered" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/clock"/>
            <TextView
                android:id="@+id/date_value1"
                android:paddingLeft="4sp"
                android:layout_width="wrap_content"
                android:textSize="30dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Friday, 17/2/19, 10:35 PM"
                android:textColor="#943938"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/image_show"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"

            android:src="@drawable/group_70"
            android:layout_gravity="center_horizontal"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, "
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/name"
            android:text="Muhammad "
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"

            />
        </RelativeLayout>

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="550dp"
            android:layout_height="550dp"
            android:columnCount="2"
            android:rowCount="2"
            >

            <ImageView
                android:layout_height="280dp"
                android:layout_width="280dp"
                android:layout_row="0"
                android:layout_column="0"
                app:srcCompat="@drawable/propertiesicon" />

            <ImageView
                android:id="@+id/sevice_list"
                android:layout_height="280dp"
                android:layout_width="280dp"
                android:layout_row="0"
                android:layout_column="1"
                app:srcCompat="@drawable/maintenanceicon" />

            <ImageView
                android:id="@+id/feedback_image"
                android:layout_height="280dp"
                android:layout_width="280dp"
                android:layout_row="1"
                android:layout_column="0"
                app:srcCompat="@drawable/feedbackicon" />

            <ImageView
                android:id="@+id/contact_us"
                android:layout_height="280dp"
                android:layout_width="280dp"
                android:layout_row="1"
                android:layout_column="1"
                app:srcCompat="@drawable/contactusicon" />
        </GridLayout>


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:rowCount="1"
            android:columnCount="4"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="20dp"
            >

            <ImageView
                android:padding="0dp"
                android:layout_width="70dp"
                android:layout_height="60dp"

                android:layout_row="0"
                android:layout_column="0"
                android:src="@drawable/facebook"
                />
            <ImageView
                android:padding="0dp"
                android:layout_row="0"
                android:layout_width="60dp"
                android:layout_marginLeft="5dp"

                android:layout_height="60dp"
                android:layout_column="1"
                android:src="@drawable/instagram"
                />
            <ImageView
                android:padding="1dp"
                android:layout_row="0"
                android:layout_width="60dp"
                android:layout_marginLeft="5dp"

                android:layout_height="60dp"
                android:layout_column="2"
                android:src="@drawable/twitter"
                />
            <ImageView
                android:padding="1dp"
                android:layout_row="0"
                android:layout_width="60dp"
                android:layout_marginLeft="5dp"

                android:layout_height="60dp"
                android:layout_column="3"
                android:src="@drawable/youtube"
                />

        </GridLayout>











    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"

        >
        <ImageView
            android:id="@+id/homess"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/home"
            android:layout_weight="1"
            android:padding="2dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/rateus"
            android:layout_weight="1"
            android:padding="2dp"/>
        <ImageView
            android:id="@+id/about_us"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/aboutus"
            android:layout_weight="1"
            android:padding="2dp"/>
    </LinearLayout>

    <!--</RelativeLayout>-->
</RelativeLayout>