<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">



    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="397dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:alpha=".75"
        android:background="@mipmap/re">


        <ImageView
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="21dp"
            android:src="@mipmap/youtube"/>

        <TextView
            android:id="@+id/date_value22"
            android:textSize="16dp"
            android:layout_toRightOf="@id/image"
            android:layout_width="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="28dp"
            android:text="Air Conditioning Maintenance "
            android:textColor="#000000"/>


        <TextView
            android:id="@+id/date_value23"
            android:textSize="16dp"
            android:layout_toRightOf="@id/image"
            android:layout_width="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_below="@id/date_value22"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Work Process"
            android:textColor="@android:color/holo_red_dark"/>


        <TextView
            android:id="@+id/date_value24"
            android:textSize="16dp"
            android:layout_toRightOf="@id/image"
            android:layout_width="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_below="@id/date_value23"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="ID: "
            android:textColor="@android:color/black"/>


        <TextView
            android:id="@+id/date_value28"
            android:textSize="16dp"
            android:layout_toRightOf="@id/date_value24"
            android:layout_width="wrap_content"
            android:layout_below="@id/date_value23"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="ACMKSNJSNJNS "
            android:textColor="@android:color/black"/>


        <TextView
            android:id="@+id/date_value25"
            android:textSize="16dp"
            android:layout_toRightOf="@id/image"
            android:layout_width="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_below="@id/date_value24"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Open"
            android:textColor="@android:color/holo_red_dark"/>




        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@mipmap/view"
            android:layout_below="@id/date_value28"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</RelativeLayout>