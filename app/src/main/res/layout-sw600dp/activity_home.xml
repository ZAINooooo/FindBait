<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdScreen"
    android:background="@drawable/bg1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="225dp"
            android:layout_height="225dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/logobordered" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:src="@drawable/clock"/>
            <TextView
                android:id="@+id/date_value1"
                android:paddingLeft="4sp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Friday, 17/2/19, 10:35 PM"
                android:textColor="#943938"/>
        </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"

            android:src="@drawable/group_70"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, Muhammad"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:layout_gravity="center_horizontal"
            />

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:columnCount="2"
            android:rowCount="2"
            >

            <ImageView
                android:layout_height="180dp"
                android:layout_width="180dp"
                android:layout_row="0"
                android:layout_column="0"
                app:srcCompat="@drawable/propertiesicon" />

            <ImageView
                android:layout_height="180dp"
                android:layout_width="180dp"
                android:layout_row="0"
                android:layout_column="1"
                app:srcCompat="@drawable/maintenanceicon" />

            <ImageView
                android:id="@+id/feedback_image"
                android:layout_height="180dp"
                android:layout_width="180dp"
                android:layout_row="1"
                android:layout_column="0"
                app:srcCompat="@drawable/feedbackicon" />

            <ImageView
                android:layout_height="180dp"
                android:layout_width="180dp"
                android:layout_row="1"
                android:layout_column="1"
                app:srcCompat="@drawable/contactusicon" />
        </GridLayout>


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:layout_marginTop="30dp"
            android:columnCount="4"

            >
            <ImageView
                android:padding="1dp"
                android:layout_row="0"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_column="0"
                android:src="@drawable/facebook"
                />
            <ImageView
                android:padding="1dp"
                android:layout_row="0"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_column="1"
                android:src="@drawable/instagram"
                />
            <ImageView
                android:padding="1dp"
                android:layout_row="0"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_column="2"
                android:src="@drawable/twitter"
                />
            <ImageView
                android:padding="1dp"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/youtube"
                />

        </GridLayout>











    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/home"
            android:layout_weight="1"
            android:padding="2dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/rateus"
            android:layout_weight="1"
            android:padding="2dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/aboutus"
            android:layout_weight="1"
            android:padding="2dp"/>
    </LinearLayout>

    <!--</RelativeLayout>-->
</RelativeLayout>